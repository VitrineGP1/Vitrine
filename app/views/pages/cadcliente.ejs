    <section class="intro">
        <h1>Criar Nova Conta</h1>
        <p>Preencha os dados abaixo para criar sua conta</p>
    </section>
    
    <main>
        <form id="cadastro-form" novalidate>
            
            
            <fieldset>
                <legend>Informa√ß√µes Pessoais</legend>
                
                <section class="form-group">
                    <label for="nome">Nome Completo</label>
                    <input type="text" id="nome" name="nome" required>
                    <small id="nome-error" aria-live="polite"></small>
                </section>
                
                <section class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" required>
                    <small id="email-error" aria-live="polite"></small>
                </section>
                
                <section class="form-group">
                    <label for="celular">Telefone</label>
                    <input type="tel" id="celular" name="celular">
                    <small id="celular-error" aria-live="polite"></small>
                </section>
                
                <section class="form-group">
                    <label for="dataNasc">Data de Nascimento</label>
                    <input type="date" id="dataNasc" name="dataNasc">
                    <small id="dataNasc-error" aria-live="polite"></small>
                </section>
            </fieldset>
            
            <fieldset>
                <legend>Endere√ßo</legend>
                
                <section class="form-group">
                    <label for="cep">CEP</label>
                    <input type="text" id="cep" name="cep">
                    <small id="cep-error" aria-live="polite"></small>
                </section>
                
                <section class="form-group">
                    <label for="logradouro">Logradouro</label>
                    <input type="text" id="logradouro" name="logradouro">
                </section>
                
                <section class="form-group">
                    <label for="bairro">Bairro</label>
                    <input type="text" id="bairro" name="bairro">
                </section>
                
                <section class="form-group">
                    <label for="cidade">Cidade</label>
                    <input type="text" id="cidade" name="cidade">
                </section>
                
                <section class="form-group">
                    <label for="uf">UF</label>
                    <input type="text" id="uf" name="uf" maxlength="2">
                </section>
            </fieldset>
            
            <fieldset>
                <legend>Informa√ß√µes de Acesso</legend>
                
                <section class="form-group">
                    <label for="password">Senha</label>
                    <section class="password-container">
                        <input type="password" id="password" name="password" required minlength="8">
                        <button type="button" id="togglePassword" class="toggle-password" aria-label="Mostrar senha">üëÅÔ∏è</button>
                    </section>
                    <section class="password-strength-container">
                        <section class="password-strength">
                            <section class="password-strength-bar" id="strengthBar"></section>
                        </section>
                        <section class="strength-text" id="strengthText"></section>
                    </section>
                    <small id="password-error" aria-live="polite"></small>
                </section>
                
                <section class="form-group">
                    <label for="confirmPassword">Confirmar Senha</label>
                    <section class="password-container">
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                        <button type="button" id="toggleConfirmPassword" class="toggle-password" aria-label="Mostrar senha">üëÅÔ∏è</button>
                    </section>
                    <small id="confirm-password-error" aria-live="polite"></small>
                </section>
            </fieldset>
            
            <button type="submit" id="submitBtn" class="btn-primary">
                <span id="btnText">Criar Conta</span>
                <span id="btnLoading" class="loading" style="display: none;"></span>
            </button>
            <section id="feedback-message" class="message" role="alert" aria-live="polite"></section>
        </form>
        
