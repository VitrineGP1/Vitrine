    <script>
        // Funções do modal
        function showLoginModal() {
            document.getElementById('loginModal').style.display = 'block';
        }
        
        function closeLoginModal() {
            document.getElementById('loginModal').style.display = 'none';
        }
        
        // Verificar se usuário está logado
        function checkLogin() {
            const loggedUser = localStorage.getItem('loggedUser');
            return loggedUser !== null;
        }
        
        // Formulário de avaliação
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('reviewForm').addEventListener('submit', function(e) {
                e.preventDefault();
                if (!checkLogin()) {
                    showLoginModal();
                    return;
                }
                alert('Avaliação enviada com sucesso!');
            });
        });
        
        // Sistema de estrelas da esquerda para direita
        document.addEventListener('DOMContentLoaded', function() {
            const stars = document.querySelectorAll('.rating-input label');
            const radios = document.querySelectorAll('.rating-input input[type="radio"]');
            
            stars.forEach((star, index) => {
                star.addEventListener('mouseover', () => {
                    stars.forEach((s, i) => {
                        s.style.color = i <= index ? '#f1c40f' : '#ddd';
                    });
                });
                
                star.addEventListener('click', () => {
                    if (!checkLogin()) {
                        showLoginModal();
                        return;
                    }
                    radios[index].checked = true;
                    stars.forEach((s, i) => {
                        s.style.color = i <= index ? '#f1c40f' : '#ddd';
                    });
                });
            });
            
            document.querySelector('.rating-input').addEventListener('mouseleave', () => {
                const checkedIndex = Array.from(radios).findIndex(radio => radio.checked);
                stars.forEach((s, i) => {
                    s.style.color = checkedIndex >= 0 && i <= checkedIndex ? '#f1c40f' : '#ddd';
                });
            });
        });
        
        // Fechar modal clicando fora dele
        window.onclick = function(event) {
            const modal = document.getElementById('loginModal');
            if (event.target == modal) {
                closeLoginModal();
            }
        }
    </script>
