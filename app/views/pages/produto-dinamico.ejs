    <script>
        // Funções do modal
        function showLoginModal() {
            document.getElementById('loginModal').style.display = 'block';
        }
        
        function closeLoginModal() {
            document.getElementById('loginModal').style.display = 'none';
        }
        
        // Verificar se usuário está logado
        function checkLogin() {
            const loggedUser = localStorage.getItem('loggedUser');
            if (!loggedUser) return false;
            try {
                const user = JSON.parse(loggedUser);
                return user && user.id;
            } catch (e) {
                console.error('Erro ao verificar login:', e);
                return false;
            }
        }
        
        // Verificar login ao carregar a página
        document.addEventListener('DOMContentLoaded', function() {
            const loggedUser = localStorage.getItem('loggedUser');
            const loginLink = document.getElementById('login-link');
            const profileLink = document.getElementById('profile-link');
            const sellerLink = document.getElementById('seller-link');
            const headerProfileImage = document.getElementById('header-profile-image');
            
            if (loggedUser) {
                try {
                    const user = JSON.parse(loggedUser);
                    if (user && user.id) {
                        // Usuário logado
                        if (loginLink) loginLink.style.display = 'none';
                        if (profileLink) profileLink.style.display = 'flex';
                        
                        // Configurar imagem do perfil
                        if (user.profileImage && headerProfileImage) {
                            headerProfileImage.src = user.profileImage;
                        } else if (headerProfileImage) {
                            const firstName = user.name ? user.name.split(' ')[0] : 'U';
                            headerProfileImage.src = `https://placehold.co/32x32/cccccc/333333?text=${firstName.charAt(0)}`;
                        }
                        
                        // Ocultar "Seja um Vendedor" se já for vendedor ou admin
                        if ((user.type === 'seller' || user.sellerId || user.type === 'admin') && sellerLink) {
                            sellerLink.style.display = 'none';
                        }
                        return;
                    }
                } catch (e) {
                    console.error('Erro ao parsear dados do usuário:', e);
                }
            }
            
            // Usuário não logado - mostrar links de login
            if (loginLink) loginLink.style.display = 'block';
            if (profileLink) profileLink.style.display = 'none';
        });
        
        // Formulário de avaliação
        document.addEventListener('DOMContentLoaded', function() {
            const reviewForm = document.getElementById('reviewForm');
            if (reviewForm) {
                reviewForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    if (!checkLogin()) {
                        showLoginModal();
                        return;
                    }
                    alert('Avaliação enviada com sucesso!');
                });
            }
        });
        
        // Sistema de estrelas da esquerda para direita
        document.addEventListener('DOMContentLoaded', function() {
            const stars = document.querySelectorAll('.rating-input label');
            const radios = document.querySelectorAll('.rating-input input[type="radio"]');
            
            stars.forEach((star, index) => {
                star.addEventListener('mouseover', () => {
                    stars.forEach((s, i) => {
                        s.style.color = i <= index ? '#f1c40f' : '#ddd';
                    });
                });
                
                star.addEventListener('click', () => {
                    if (!checkLogin()) {
                        showLoginModal();
                        return;
                    }
                    radios[index].checked = true;
                    stars.forEach((s, i) => {
                        s.style.color = i <= index ? '#f1c40f' : '#ddd';
                    });
                });
            });
            
            document.querySelector('.rating-input').addEventListener('mouseleave', () => {
                const checkedIndex = Array.from(radios).findIndex(radio => radio.checked);
                stars.forEach((s, i) => {
                    s.style.color = checkedIndex >= 0 && i <= checkedIndex ? '#f1c40f' : '#ddd';
                });
            });
        });
        
        // Fechar modal clicando fora dele
        window.onclick = function(event) {
            const modal = document.getElementById('loginModal');
            if (event.target == modal) {
                closeLoginModal();
            }
        }
        
        // Teste simples dos botões de quantidade
        document.addEventListener('click', function(e) {
            if (e.target.id === 'qty-minus') {
                const input = document.getElementById('product-quantity');
                let value = parseInt(input.value) || 1;
                if (value > 1) input.value = value - 1;
            }
            if (e.target.id === 'qty-plus') {
                const input = document.getElementById('product-quantity');
                let value = parseInt(input.value) || 1;
                if (value < 10) input.value = value + 1;
            }
        });
    </script>
