    <main>
        <section class="container" aria-labelledby="product-main-heading">
            <div class="product-header">
                <% if (produto.IMAGEM_BASE64) { %>
                    <img id="product-image" src="data:image/jpeg;base64,<%= produto.IMAGEM_BASE64 %>" alt="<%= produto.NOME_PROD %>" width="500" height="500"/>
                <% } else if (produto.IMAGEM_URL) { %>
                    <img id="product-image" src="<%= produto.IMAGEM_URL %>" alt="<%= produto.NOME_PROD %>" width="500" height="500"/>
                <% } else { %>
                    <img id="product-image" src="imagens/produto-default.jpg" alt="<%= produto.NOME_PROD %>" width="500" height="500"/>
                <% } %>
                
                <div class="product-details">
                    <h1 id="product-main-heading" class="product-title"><%= produto.NOME_PROD %></h1>
                    <p id="product-price" class="product-price">R$ <%= parseFloat(produto.VALOR_UNITARIO).toFixed(2).replace('.', ',') %></p>
                    <p class="product-description">
                        <%= produto.DESCRICAO_PROD || 'Produto artesanal de alta qualidade.' %>
                    </p>
                    <button id="addToCartBtn" class="btn add-to-cart-btn" type="button" data-product-id="<%= produto.ID_PROD %>">ADICIONAR AO CARRINHO</button>
                    <div id="cart-feedback-message" class="message"></div>
                </div>
            </div>

            <section class="specifications" aria-labelledby="specs-heading">
                <h2 id="specs-heading">Especificações Técnicas</h2>
                <ul class="product-specs-list">
                    <li><strong>Código:</strong> #<%= produto.ID_PROD %></li>
                    <li><strong>Categoria:</strong> <%= produto.ID_CATEGORIA ? 'Categoria ' + produto.ID_CATEGORIA : 'Artesanato' %></li>
                    <li><strong>Material:</strong> Artesanal</li>
                    <li><strong>Qualidade:</strong> Premium</li>
                </ul>
            </section>

            <section class="seller-info" aria-labelledby="seller-heading">
                <h2 id="seller-heading">Informações do Vendedor</h2>
                <div class="seller-details">
                    <div>
                        <p class="seller-name"><%= produto.NOME_LOJA || 'Loja Artesã' %></p>
                        <p class="seller-rating" role="img" aria-label="Avaliação do vendedor: 4.5 de 5 estrelas">Avaliação: ★★★★☆ (4.5)</p>
                        <p class="seller-items">Produtos disponíveis: <%= produto.TOTAL_PRODUTOS || '15' %> itens</p>
                    </div>
                </div>
            </section>
            
            <section class="reviews-section">
                <h2>Avaliações do Produto</h2>
                
                <div class="review-form">
                    <h3>Deixe sua avaliação</h3>
                    <form id="reviewForm">
                        <div class="rating-input">
                            <input type="radio" id="star1" name="rating" value="1">
                            <label for="star1">★</label>
                            <input type="radio" id="star2" name="rating" value="2">
                            <label for="star2">★</label>
                            <input type="radio" id="star3" name="rating" value="3">
                            <label for="star3">★</label>
                            <input type="radio" id="star4" name="rating" value="4">
                            <label for="star4">★</label>
                            <input type="radio" id="star5" name="rating" value="5">
                            <label for="star5">★</label>
                        </div>
                        <textarea class="review-textarea" placeholder="Escreva sua avaliação sobre o produto..." required></textarea>
                        <button type="submit" class="review-submit">Enviar Avaliação</button>
                    </form>
                </div>
                
                <div class="reviews-list">
                    <div class="review-item">
                        <div class="review-header">
                            <span class="review-author">Maria Silva</span>
                            <span class="review-rating">★★★★★</span>
                        </div>
                        <p class="review-text">Produto de excelente qualidade! Superou minhas expectativas. Recomendo!</p>
                    </div>
                    
                    <div class="review-item">
                        <div class="review-header">
                            <span class="review-author">João Santos</span>
                            <span class="review-rating">★★★★☆</span>
                        </div>
                        <p class="review-text">Muito bom produto artesanal. Chegou bem embalado e no prazo.</p>
                    </div>
                </div>
            </section>
        </section>
    </main>

