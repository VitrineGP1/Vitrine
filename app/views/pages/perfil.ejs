        // Carregar dados do usuário
        document.addEventListener('DOMContentLoaded', function() {
            loadProfileImageFromStorage();
            loadUserData();
            setupEditControls();
            checkSellerStatus();
            setupProfileImageUpload();
            
            // Garantir sincronização das imagens após carregamento
